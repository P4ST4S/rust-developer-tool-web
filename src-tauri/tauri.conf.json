{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.p4st4s.devlauncher",
  "productName": "Dev Stack Launcher",
  "version": "2.2.0",
  "build": {
    "beforeBuildCommand": "pnpm --dir ui build",
    "beforeDevCommand": "pnpm --dir ui dev",
    "devUrl": "http://localhost:8078",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Dev Stack Launcher",
        "width": 1000,
        "height": 700,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
